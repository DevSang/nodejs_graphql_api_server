    function handleDeleteButton(e) {
        console.log(`handleClickon blur ${pwImgFocus}`);
        pwImgFocus = true;
        var id = e.id;
        id = id.replace('Img', '')
        console.log(e.src)
        if(document.getElementById(id).type == "password") {
            document.getElementById(id).type = "text";
            e.src = e.src.replace("/buttonEye@3x.png", "/eyeHide@3x.png");
            e.style.height = '33pt';
            e.style.margin = '0px 20px';
        } else {
            document.getElementById(id).type = "password";
            e.src = e.src.replace("/eyeHide@3x.png" , "/buttonEye@3x.png");
            e.style.height = '24pt';
            e.style.margin = '7px 20px 0px 0px'
        }
    }

    function onFocus(e) {
        console.log(e.id)
        let id = e.id;
        eval(`${id}Focus = true`);
        let img = document.getElementById(`${id}Img`);
        img.style.display = 'block';
    }

    function onImgFocus(e) {
        // pwImgFocus = true;
        eval(`${e.id}ImgFocus = true;`);
    }

    function onImgBlur(e) {
        let id = e.id;
        eval(`${id}Focus = false;`);
        id = id.replace('Img', '');
        if(eval(`${id}Focus == false`)) {
            e.style.display = 'none';
        }
    }

    function onBlur(e) {
        let id = e.id;
        id = id.replace('Img', '');

        document.getElementById(id).type = 'password'
        let img = document.getElementById(`${id}Img`);
        img.src = img.src.replace("/eyeHide@3x.png" , "/buttonEye@3x.png");
        img.style.height = '24pt';
        img.style.margin = '7px 20px 0px 0px';
        setTimeout(function() {
            if(pwImgFocus==false) {
                img.style.display = 'none';
            }
            }, 10);
    }

    function keyDown(e) {
        if(eval(`${e.id}First == true;`)) {
            e.value=""
            eval(`${e.id}First = false;`)
        }
    }


    function handleDeleteButton2() {
        document.getElementById('pw2').type =  document.getElementById('pw').type == "password" ? "text" : "password";

    }

    function checkPwLength(target) {
        var text = target.value;
        if(text.length > 5 && text.length <= 10) {
            document.getElementById('pwL').style.color = "white";
        } else {
            document.getElementById('pwL').style.color = "#eb454f";
        }
        return '';
    }

    function checkPw() {
        console.log('keyup')
        var pw = document.getElementById('pw').value;
        var pw2 = document.getElementById('pw2').value;
        var checkLength = false;
        var checkPw = false;
        // Password 길이 확인
        if(pw.length > 5 && pw.length <= 10) {
            document.getElementById('pwL').style.color = "white";
            checkLength = true;
        } else {
            document.getElementById('pwL').style.color = "#eb454f";
        }

        // Password 같은지 확인
        if(pw == pw2) {
            document.getElementById('pwM').style.color = "white";
            checkPw = true;
        } else {
            document.getElementById('pwM').style.color = "#eb454f";
        }

        if(checkLength === true & checkPw) {
            document.getElementById("changePassword").src = "/asset/verifyButton@2x.png";

        }

        return '';
    }

    
</script>
